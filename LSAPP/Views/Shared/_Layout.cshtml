    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="@Url.Content("~/Content/bootstrap-rtl.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/box-sizing-fixes.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.growl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/select2.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-3.5.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-rtl.js")"></script>
    <script src="@Url.Content("~/Scripts/select2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/GlobalJS.js")"></script>
    <link href="@Url.Content("~/Content/DataTables/css/dataTables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataTables/css/fixedHeader.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataTables/css/responsive.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.flash.min.js"></script>
    <script src="~/Scripts/DataTables/jszip.min.js"></script>
    <script src="~/Scripts/DataTables/pdfmake.min.js"></script>
    <script src="~/Scripts/DataTables/vfs_fonts.js"></script>
    <script src="~/Scripts/DataTables/buttons.html5.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.print.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.fixedHeader.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>

</head>
<style>
    * {
        font-family: siteFont;
        /*font-size: 10pt;*/
    }

    .tooltip {
        font-family: siteFont;
        font-size: 12px;
        background-color: khaki;
        color: black;
        min-width: 450px;
        direction: rtl;
    }

        .tooltip .tooltip-inner {
            background-color: khaki;
            color: black;
            min-width: 450px;
            direction: rtl;
        }

    .table th {
        text-align: center;
        vertical-align: middle;
    }

    input[type='checkbox'] {
        /*-webkit-appearance:none;*/
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 5px;
        border: 2px solid #555;
    }

        input[type='checkbox']:checked {
            background: #abd;
        }

    .circle {
        width: 120px;
        height: 60px;
        border-radius: 50%;
        font-size: 11px;
        color: #fff;
        line-height: 54px;
        text-align: center;
        background: Gray;
        stroke: black;
        border-color: #000000;
        align-content: center;
        justify-content: center;
        display: flex;
    }

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    tbody tr:nth-child(odd) {
        background-color: #fff;
    }

    tbody tr:nth-child(even) {
        background-color: #eee;
    }

    /*table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
       background-color:  #e5e5e5;
     }

     .table-striped > tbody > tr:nth-child(2n+1) > td, .table-striped > tbody > tr:nth-child(2n+1) > th {
             background-color: #E5E5E5;
         }*/
</style>

<body>
    <div class="body-content">
        <div class="row col-sm-12" align="right" style="padding-top: 0px">

            <div class="container-fluid col-sm-2" style="padding: 0px">

                <div class="row col-sm-12">

                    <!-- menu -->
                    <div id="MainMenu">
                        <div class="list-group panel" style="background: lightgray">
                            <span class="list-group-item" data-parent="#MainMenu" style="text-align: center; color: #fff; background-color: black">
                                سیستم لجستيك ساميا
                            </span>
                            <span style="height:30px">
                                <label>فرمهاي ورود</label>
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("اطلاعات قطعات", "ShowGoods", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("اطلاعات مشتریان", "ShowCustomer", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("آپلود سفارش", "UploadInf", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("آپلود پكينگ ليست", "UploadPackingList", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("دريافت انبار", "Entrance2WareHouse", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("ایجاد درخواست", "GoodsRequest", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("ایجاد پیش فاکتور", "Invoice", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("تاييد پیش فاکتور", "ConfirmInvoice", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("جمع آوری انبار", "WarehouseDraft", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("خروج از انبار", "ExitWarehouse", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink("ايجاد فاکتور", "Factor", "home")
                            </span>

                            <span style="height:30px">
                                <label>گزارشات</label>
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink(" گزارش سفارشات", "SearchOrder", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink(" گزارش پکینگ لیست", "SearchPackingList", "home")
                            </span>
                            <span class="list-group-item" data-parent="#MainMenu">
                                @Html.ActionLink(" گزارش ورود به انبار", "Entrance2WareHouseRep", "home")
                            </span>

                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid  col-sm-10" style="padding: 0px">
                @RenderBody()
            </div>
        </div>
    </div>
    @*<div class="container body-content">
            @RenderBody()
        </div>*@
    <div id="ajaxModal" class="modal" style="display: none; width: 100%; height: 100%; background: rgba(255, 255, 255, .8) url('../../Content/loading2.gif') 50% 50% no-repeat; vert-align: middle; vertical-align: central" align="center">
        @*<img src="../../Content/loading2.gif" />*@
    </div>
    <div class="modal modal-lg fade" id="errorModal" style="overflow: hidden;" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" data-backdrop="false">
        <div class="modal-dialog" role="document" id="errorModalDocument">
            <div class="modal-content">
                <div class="modal-header alert-info  ">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="errorModalLabel">Modal title</h4>
                </div>
                <div class="modal-body" id="errorbodymodal">
                    ...
                </div>
            </div>
        </div>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@
</body>
</html>
<script>
       $.ajaxSetup({
        global: false,
        type: "GET",

        beforeSend: function () {
            $("#ajaxModal").show();
        },
        complete: function () {
            $("#ajaxModal").hide();
        }
    });
</script>
