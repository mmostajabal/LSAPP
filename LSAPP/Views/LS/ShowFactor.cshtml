@using LSService
@model IList<VExitWarehouseClass>
@{
    Layout = null;
    int ind = 1;
}
<div class="col-sm-12" style="padding-top:20px">
    <table id="PrintDraftTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="HT">
                <th width="10%"> ردیف</th>
                <th width="10%"> نام مشتري</th>
                <th width="15%"> عنوان فاكتور</th>
                <th width="10%"> شماره فاكتور</th>
                <th width="15%"> شماره فنی </th>
                <th width="15%">شرح لاتین</th>
                <th width="8%">مقدار  فاكتور</th>
                <th width="8%">بهای واحد</th>
                <th width="8%">بها</th>
                <th width="8%"> تاریخ</th>
                <th width="8%">ُساعت</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr>
                <td>@ind</td>
                <td align="center" >@m.CustomerName </td>
                <td align="center">@m.InvoiceTitle</td>
                <td align="center" >@m.FactorNo</td>

                <td align="center" >@m.TechnicalCode</td>
                <td align="left">@m.ItemName</td>
                <td align="center" >@m.Qty</td>
                <td align="center" >@m.PriceInRials</td>
                <td align="center" >@(m.Qty * m.PriceInRials)</td>
                <td align="center" >@m.FactorDate</td>
                <td align="center" >@m.FactorTime</td>

                @*<td align="center">@m.RequestDate</td>
        <td align="center">@m.RequestTime</td>*@
            </tr>

                ind++;
            }
        </tbody>

    </table>

</div>

<script>
    $(document).ready(function () {
        $('#PrintDraftTable').DataTable({ "responsive": true, "paging": false, dom: 'Bfrtip', buttons: ['print'] });
        CustomerId_Change();
    });
</script>
