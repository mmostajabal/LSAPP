
@model IList<LSService.VCustomerClass>
@{
    Layout = null;
    int ind = 1;
}

<div class="col-sm-12">
    <table id="CustomerTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="HT">
                <th width="8%">عمليات</th>
                <th width="8%">نوع مشتری</th>
                <th width="8%">قرارداد مشتری</th>
                <th width="10%">نام مشتری </th>
                <th width="10%">نام مدیر</th>
                <th width="8%">كد/شناسه ملي</th>
                <th width="8%">كد پستي</th>
                <th width="8%">كد اقتصادي</th>
                <th width="8%">شماره ثبت</th>
                <th width="8%">نام ويزيتور</th>
                <th width="8%">كد ويزيتور</th>
                <th width="8%">تلفن</th>
                <th width="8%">موبایل</th>
                <th width="10%">ایمیل</th>
                <th width="15%">آدرس</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr id="NewItems">
                <td>
                    <i class="fa fa-edit" onclick="EditBtn_Click('@m.CustomerId');" style="font-size: 12pt;cursor:pointer" title="ویرایش"></i>
                    &nbsp;<i class="fa fa-trash" style="color:red;font-size:12pt;cursor:pointer" title="حذف" onclick="DelBtn_Click('@m.CustomerId');"></i>
                </td>
                <td align="center">@m.CustomerTypeDesc</td>
                <td align="center">@m.CustomerContractTypeDesc</td>
                <td>@m.CustomerName</td>
                <td>@m.ManagerName</td>
                <td>@m.NationalId</td>
                <td>@m.ZIPCode</td>
                <td>@m.EcoCode</td>
                <td>@m.RegistrationNumber</td>
                <td>@m.RepresentativeName</td>
                <td>@m.RepresentativeCode</td>

                <td>@m.Tel</td>
                <td>@m.MobileNo</td>
                <td>@m.Email</td>
                <td>@m.Address</td>
            </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        try {

            var catTable = $('#CustomerTable').DataTable({ "responsive": true, "paging": false, dom: 'Bfrtip', buttons: ['excel', 'print'] });
        } catch (ex) {
            alert(ex.toString());
        }
    });
</script>