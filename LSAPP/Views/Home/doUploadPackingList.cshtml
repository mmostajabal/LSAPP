            //    cache: false,
            //    success: function (data) {
            //        //$('#MessageTable').html("");
            //        //AddRow2Table("MessageTable", " ثبت با موفقیت انجام شد ", "LabelConfirm");
            //        //ResetForm();
            //        return;
            //    },
            //    contentType: "application/json; charset=utf-8",
            //    dataType: "json",
            //    //
            //    data: "{"
            //        + "'OrderHaveErrorId' : " + JSON.stringify(orderHaveErrorId)
            //        + "}",
            //    //error: OnError
            //});
        }
        return;
    }
</script>