@model IList<LSService.VInvoiceClass>
@{
    Layout = null;
    int ind = 1;
}
<div class="col-sm-12" style="padding-top:20px">
    <table id="PrintDraftTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="HT">
                <th width="10%"> ردیف</th>
                <th width="10%"> نام مشتري</th>
                <th width="15%"> عنوان پيش فاكتور</th>
                <th width="10%"> شماره پيش فاكتور</th>
                <th width="15%"> شماره فنی </th>
                <th width="15%">شرح لاتین</th>
                <th width="8%">مقدار پيش فاكتور</th>
                <th width="8%">مقدار جمع آوری شده</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr>
                <td>@ind</td>
                <td align="center" id="CustomerName-@ind">@m.CustomerName @Html.Hidden("InvoiceDetailId-" + ind.ToString(), m.InvoiceDetailId)</td>
                <td align="center">@m.InvoiceTitle</td>
                <td align="center" id="RequestNo-@ind">@m.InvoiceNo</td>
                <td align="center" id="TechnicalCode-@ind">@m.TechnicalCode</td>
                <td align="left">@m.ItemName</td>
                <td align="center" id="Qty-@ind">@m.Qty</td>
                <td align="center"> </td>
                @*<td align="center">@m.RequestDate</td>
        <td align="center">@m.RequestTime</td>*@
            </tr>

                ind++;
            }
        </tbody>

    </table>

</div>

<script>
    $(document).ready(function () {
        $('#PrintDraftTable').DataTable({ "responsive": true, "paging": false, dom: 'Bfrtip', buttons: ['print'] });
        CustomerId_Change();
    });
</script>
