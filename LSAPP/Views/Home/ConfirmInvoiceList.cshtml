@model IList<LSService.VInvoiceClass>
    @{ 
        Layout = null;
        int ind = 1;
     }
<div class="col-sm-12" style="padding-top:20px">
    <table id="CurRequestTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="HT">
                @*<th width="10%">عمليات</th>*@
                <th width="8%">
                    انتخاب
                </th>
                <th width="10%"> نام مشتري</th>
                <th width="15%"> عنوان پيش فاكتور</th>
                <th width="10%"> شماره پيش فاكتور</th>
                <th width="10%"> شماره فنی</th>
                <th width="15%">شرح لاتین</th>
                <th width="8%">مقدار پيش فاكتور</th>
                <th width="8%"> بها واحد</th>
                <th width="8%"> قيمت پیش فاکتور </th>
                <th width="8%">تاريخ ايجاد</th>
                @*<th width="10%">تعداد تاييد شده</th>*@
                @*<th width="10%">تاريخ درخواست</th>
        <th width="10%">ساعت درخواست</th>
        <th width="10%"> تعداد پیش فاکتور*@ </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr>

                @*@if (m.InvoiceDetailIsActive == 24)
        {*@
                <td align="center">
                    @Html.CheckBox("Selected" + ind.ToString(), new { style = "text-align:right;", @tabindex = 9, @onclick = "SelectSKill(" + (ind - 1).ToString() + ")" })
                </td>
                @*}
        else
        {
            <td align="center"></td>
        }*@
                <td align="center" id="CustomerName-@ind">@m.CustomerName @Html.Hidden("InvoiceDetailId-" + ind.ToString(), m.InvoiceDetailId)</td>
                <td align="center" >@m.InvoiceTitle</td>
                <td align="center" id="RequestNo-@ind">@m.RequestNo</td>
                <td align="center" id="TechnicalCode-@ind">@m.TechnicalCode</td>
                <td align="left">@m.ItemName</td>
                <td align="center" id="Qty-@ind">@m.Qty</td>
                <td align="center" id="PriceInRials-@ind">@m.PriceInRials</td>

                <td align="center" id="TotalPrice-@ind">@(m.Qty * m.PriceInRials)</td>
                <td align="center">@m.InvoiceDate</td>

                @*<td align="center">@m.RequestDate</td>
        <td align="center">@m.RequestTime</td>*@
            </tr>

                ind++;
            }
        </tbody>

    </table>

</div>
<div>
    @Html.Hidden("NumberInvoiceRow", Model.Count)
</div>

<script>
    $(document).ready(function () {
        $('#CurRequestTable').DataTable({ "responsive": true, "paging": false });

    });
</script>
