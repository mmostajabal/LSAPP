<script>
    $(function () {
        if ($("#RequestHeaderIsActive").val() == 25 || $("#RequestHeaderIsActive").val() == 26) {
            HideRow("EditDiv");
            HideRow("DeleteDiv");

        } else {
            ShowRow("EditDiv");
            ShowRow("DeleteDiv");
        }
    });
     function NewRequestBtn_Click() {
        if ($("#CustomerId").val() != null) {
            $("#KeepRequestNo").val('');
            $("#ShowObject").val('1');

            var url = "@Url.Action("AddRequest", "home")";
            url += "?RequestNo=''";

            $("#RequestPartialBody").load(url);
            $("#RequestModal").modal('show');

        } else {
            ShowAlert("لطفا مشتری را انتخاب کنید", "توجه");
        }

        return;
    }
</script>
